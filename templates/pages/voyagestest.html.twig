{% extends "basefront.html.twig" %}

{% block body %}
    <table class='table table-striped'>
        <thead>
            <tr>
                <th class='text-left' scope='col'>Ville</th>
                <th class='text-left' scope='col'>Pays</th>
                <th class='text-end' scope='col'>Note</th>
                <th class='text-center' scope='col'>Date</th>
            </tr>
        </thead>
        <tbody>
            {% for visite in visites %}
                <tr>
                    <td>
                        <h5 class='text-primary'>
                            <a href='{{ path('visite_show', {'id': visite.id}) }}'>{{ visite.ville }}</a>
                        </h5>
                    </td>
                    <td>
                        {{ visite.pays }}
                    </td>
                    <td class='text-end'>
                        <strong>{{ visite.note }}/20</strong>
                    </td>
                    <td class='text-center'>
                        {{ visite.DatecreationString }}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}{# empty Twig template #}
